<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Home Page Header</masterLabel>
    <description
    >This is an LWC Created to use across the Coral Cloud App</description>
    <targets>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property
                label="Title"
                name="title"
                type="String"
                required="true"
            />
            <property
                label="Subtitle"
                name="subtitle"
                type="String"
                required="true"
            />
            <property
                label="Icon Name"
                name="iconName"
                type="String"
                required="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
